<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AppointmentBookingAjaxJquery</title>

    <!-- Bootstrap & Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/AppointmentBookingAjaxJquery.styles.css" asp-append-version="true">

    <!-- FontAwesome & Google Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            background-color: #007bff; /* Primary Blue */
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
            font-weight: 500;
            transition: 0.3s;
        }

        .nav-link:hover {
            color: #f8f9fa !important;
            transform: scale(1.05);
        }

        .nav-item .active {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }

        .modal-content {
            border-radius: 10px;
        }

        footer {
            background: #f8f9fa;
            padding: 15px;
            text-align: center;
            font-size: 14px;
            color: #333;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-calendar-check"></i> Appointment Booking
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]=="Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]=="Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-shield"></i> Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]=="Doctors" ? "active" : "")" asp-controller="Doctors" asp-action="Index">
                                <i class="fas fa-user-md"></i> Doctors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]=="Patients" ? "active" : "")" asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-procedures"></i> Patients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]=="Appointments" ? "active" : "")" asp-controller="Appointments" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> Appointments
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap Modal -->
    <div class="modal fade" id="form-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - AppointmentBookingAjaxJquery - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
